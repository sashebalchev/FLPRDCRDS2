<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LearningFragment">

    <com.wajahatkarim3.easyflipview.EasyFlipView
        android:id="@+id/flipper_single"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:focusable="false"
        app:flipOnTouch="true"
        app:flipEnabled="true"
        app:flipDuration="200"
        app:flipType="horizontal"
        android:layout_marginHorizontal="40dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp">

            <TextView
                android:id="@+id/back"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_centerInParent="true"
                android:background="@drawable/rounded_corners"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="italic" />

            <!--<ImageButton-->
            <!--android:id="@+id/pronunciation_card_back"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_alignBottom="@+id/back"-->
            <!--android:background="@android:color/transparent"-->
            <!--android:elevation="3dp"-->
            <!--android:src="@drawable/outline_volume_up_white_24dp" />-->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/back"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="60dp">

                <Button
                    android:id="@+id/dont_know_word"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:elevation="2dp"
                    android:text="DIDN'T GET IT" />

                <Button
                    android:id="@+id/know_word"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:elevation="2dp"
                    android:text="I GOT IT" />
            </LinearLayout>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_gravity="center"
            android:layout_margin="12dp"
            android:background="@drawable/rounded_corners">

            <TextView
                android:id="@+id/front"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="42sp" />

            <ImageButton
                android:id="@+id/pronunciation_card_front"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:background="@android:color/transparent"
                android:src="@drawable/outline_volume_up_white_24dp" />
        </RelativeLayout>


    </com.wajahatkarim3.easyflipview.EasyFlipView>

</FrameLayout>